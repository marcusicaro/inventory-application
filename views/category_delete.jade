extends layout

block content
  h1 Category: #{category.name}

  if category_items.length
    div(style='margin-left:20px;margin-top:20px')
      h3 Please delete these items before attempting to delete this category.
      h5 Items

      dl
        each item in category_items
          dt
            a(href=item.url) #{item.name}
          dd #{item.description}

  else
    p Do you really want to delete this item?
    form(method='POST' action='')
      div.form-group
        input#password(type='pasword',name='password', required='true', value="", placeholder="password" )
        &nbsp;
        &nbsp;
        &nbsp;
        input#id.form-control(type='hidden',name='id', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete